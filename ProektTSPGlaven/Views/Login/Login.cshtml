@{
    ViewData["Title"] = "Login Page";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 400px; background-color: #f8f9fa;">
        <h2 class="card-title text-center mb-4">Log in</h2>
        <form id="form" name="form" method="post" asp-controller="Login" asp-action="Login">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" name="username" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" name="password" required />
            </div>
            <div class="d-grid mb-3">
                <input type="submit" name="submit" id="submit" value="Log In" class="btn btn-primary" />
            </div>
            <div class="text-center mb-2">
                <p>
                    Don't have an account?
                    <a asp-controller="Login" asp-action="Register">Sign up here</a>
                </p>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })
        </form>
    </div>
</div>

